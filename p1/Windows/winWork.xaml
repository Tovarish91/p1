<Window Style="{DynamicResource WindowStyle1}" x:Class="p1.Windows.winWork"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p1.Windows"
        mc:Ignorable="d"
        Title="winWork" Height="450" Width="800"
        WindowStyle="None">
    <Window.Resources>
        <Style x:Key="WindowStyle1" TargetType="{x:Type Window}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#FF97825D">
        <Frame HorizontalAlignment="Left" 
               VerticalAlignment="Center" 
               Name="Frame"
               NavigationUIVisibility="Hidden"></Frame>

        <WrapPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Content="Изменить" FontSize="20" Click="Button_Click_1"></Button>
            <Button Content="Добавить" FontSize="20" Margin="30 0 0 0" Click="Button_Click_2"></Button>
            <Button Content="Удалить" FontSize="20" Margin="30 0 0 0"></Button>
        </WrapPanel>

        <Button Content="Выход" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Button_Click_3"></Button>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button Content="Клиент" Click="Button_Click"></Button>
            <Button Content="Гендер" Margin="0 5 0 0" Click="Button_Click"></Button>
            <Button Content="Должность" Margin="0 5 0 0" Click="Button_Click"></Button>
            <Button Content="Сотрудник" Margin="0 5 0 0" Click="Button_Click"></Button>
            <Button Content="Сотрудник-Сервис" Margin="0 5 0 0" Click="Button_Click"></Button>
            <Button Content="Сервис" Margin="0 5 0 0" Click="Button_Click"></Button>
            <Button Content="Чек" Margin="0 5 0 0" Click="Button_Click"></Button>
            <Button Content="Чек-Сервис" Margin="0 5 0 0" Click="Button_Click"></Button>
            <Button Content="Чек-Продукт" Margin="0 5 0 0" Click="Button_Click"></Button>
            <Button Content="Продукт" Margin="0 5 0 0" Click="Button_Click"></Button>
            <Button Content="Продукт-Сервис" Margin="0 5 0 0" Click="Button_Click"></Button>
            <Button Content="Поставщик" Margin="0 5 0 0" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
