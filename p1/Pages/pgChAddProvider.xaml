<Page x:Class="p1.Pages.pgChAddProvider"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:p1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="300"
      Title="pgChAddProvider">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Provider data change" Grid.ColumnSpan="2" HorizontalAlignment="Center"></Label>

        <Label Content="ID" Grid.Row="2"></Label>
        <Label Content="Name" Grid.Row="1"></Label>

        <TextBox x:Name="tbID" Grid.Row="2" Grid.Column="1"></TextBox>
        <TextBox x:Name="tbNam" Grid.Row="1" Grid.Column="1"></TextBox>

        <Button x:Name="btnSave"
                Content="Save" 
                Width="50" 
                Grid.Column="1"
                Grid.Row="14"
                HorizontalAlignment="Right" Click="btnSave_Click"></Button>
    </Grid>
</Page>
