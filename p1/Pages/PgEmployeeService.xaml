<Page x:Class="p1.Pages.PgEmployeeService"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:p1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PgEmployeeService">

    <Grid Background="White">
        <DataGrid x:Name="DG" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IDEmployeeService}"/>
                <DataGridTextColumn Header="IDService" Binding="{Binding IDService}"/>
                <DataGridTextColumn Header="IDEmployee" Binding="{Binding IDEmployee}"/>
                </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
