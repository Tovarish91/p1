<Page x:Class="p1.Pages.pgLogs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:p1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pgLogs">

    <Grid Background="White">
        <DataGrid x:Name="DG" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Login" Binding="{Binding Login}"/>
                <DataGridTextColumn Header="Time in System" Binding="{Binding Time}"/>
                <DataGridTextColumn Header="Entry Time" Binding="{Binding EntryTime}"/>
                <DataGridTextColumn Header="Out Time" Binding="{Binding OutTime}"/>
                <DataGridTextColumn Header="Logout Reason" Binding="{Binding LogoutReason}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
